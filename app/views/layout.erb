<!doctype html>
<html>
  <head>
    <title>Book Collection</title>
    <link href="/stylesheets/bookstyle.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Helvetica&display=swap" rel="stylesheet">
    <meta name="image" property="og:image" content="https://i.imgur.com/qBQrvar.jpg" />

  </head>
  <body>

    <div class="header">
      <div class="title">
        <h1>
          <a href='/'>Book Collection</a>
        </h1>
        <h3>Library to store all your books</h3>
      </div>
      <div class"logout"="class"logout"">
        <%if Helpers.is_logged_in?(session) %>
          <form method="post" action='/logout'>
            <input style="float:right" type='submit' value="Logout" class="buttons">
          </form>
        <% end %>
      </div>
    </div>
    <div class="wrapper">
      <% if flash[:error] %>
        <b>
          <i>
            <p class="error"><%= flash[:error] %></p>
          </i>
        </b>
      <% end %>
      <%= yield %>
    </div>
  </div>
</body>
</html>
