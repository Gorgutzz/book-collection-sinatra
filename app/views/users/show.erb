<div class="sign">
    <ul class="menu">
        <li><%= Helpers.current_user(session).username %>'s Books</li>
        <li><a href="/books/new" class="buttons">Add a Book</a></li>
    </ul>

</div>

<hr>
<h3><a href="/view_all" class="buttons">View All Books </a> </h3>
<div class="booklisting">

    <h2>Featured Books:</h2>

      <% @books.each do |book| %>
    <h3> <a href="books/<%= book.id %>"> <%= book.book_title %> by <%= book.author_name %></a></h3>
<% end %>
</div>
